enum DebateStatus {
  PENDING
  LIVE
  FINISHED
}

enum DebateCategory {
  GENERAL
  POLITICS
  TECHNOLOGY
  SCIENCE
  SPORTS
  ENTERTAINMENT
  EDUCATION
  HEALTH
  ENVIRONMENT
  BUSINESS
  PHILOSOPHY
  SOCIAL_ISSUES
}

enum RoomStatus {
  WAITING
  LIVE
  FINISHED
}

enum ParticipantRole {
  PROPOSER   // fikri savunan
  OPPONENT   // fikri reddeden
  AUDIENCE   // izleyici
}
